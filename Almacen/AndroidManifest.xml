<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.almacen"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission
        android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/basket"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.example.almacen.MainPrincipal"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.example.almacen.MainProducto"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.almacen.MainProducto" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.almacen.MainRegistro"
            android:label="@string/title_activity_registro" >
        </activity>
        <activity
            android:name="com.example.almacen.MainRegistros"
            android:label="@string/title_activity_registros" >
        </activity>
        
    </application>

</manifest>
